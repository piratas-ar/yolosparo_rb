.modal.fade#mail{role:"dialog", tabindex:"-1"}
  .modal-dialog{role:"document"}
    = form_tag "/sendmail", method: "post" do
      .modal-content
        .modal-header
          %button.close{ type:"button", "data-dismiss":"modal", "aria-label":"Cerrar" }
            %span{"aria-hidden":"true"}
              &times;
          %h4.modal-title Escribile un mail a todxs

        .modal-body
          .form-group
            %label{for: "mail-asunto"} Asunto
            = text_field_tag :asunto, class: "input-sm form-control", id: "mail-asunto", value: asunto
          .form-group
            %label{for: "mail-body"} Mensaje
            = text_area_tag :mensaje, class: "input-sm form-control", id: "mail-body", rows: "6"
          .form-group
            %small opcionales
            .row
              .form-group.col-md-4
                %label{for: "mail-nombre"} Nombre
                = text_field_tag :nombre, class: "input-sm form-control", id: "mail-nombre", placeHolder: "ciudadanx"
              .form-group.col-md-8
                %label{for: "mail-from"} Email
                = email_field_tag :from, class: "input-sm form-control", id: "mail-from", placeHolder: "noreply@yolosparo.com"

        .modal-footer
          = submit_tag "Enviar", class: "btn btn-primary btn-lg", id: "mail-submit"
